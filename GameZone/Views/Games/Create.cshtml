@model CreateGameformviewModel
@{
    ViewData["Title"] = "Add Game";
}
 <h5>
    <i class="bi bi-plus-circle-ditted"></i>
     Add Game
     </h5>

<form asp-controller="Games" asp-action="Save">
<div class="row">
    <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Enter Name">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Save</button>
    </div>

</div>
</form>